<Page
    x:Class="Heist.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#2b2f33">
        <Image Source="/Assets/loginImg.jpg" Stretch="UniformToFill" Opacity="50"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.33*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.33*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Streamer" FontFamily="Garamond" Foreground="#FFF7F7" Margin="0,15,0,0" HorizontalAlignment="Center" FontSize="35"/>
            <ProgressBar HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed" x:Name="LoadingBar" Grid.Row="2"/>
            <TextBox x:Name="UserName" PlaceholderText="Enter UserName" InputScope="AlphanumericFullWidth" Width="300" Height="50" Opacity="50" Foreground="White" Grid.Row="1" Background="Transparent" BorderBrush="#F24A4A" BorderThickness="0,0,0,5"/>
            <PasswordBox KeyDown="Password_KeyDown" x:Name="Password" PlaceholderText="Enter Password" Width="300" Height="50" Opacity="50" Foreground="White" Background="Transparent" Grid.Row="2" BorderBrush="#F24A4A" BorderThickness="0,0,0,5"/>
            <Button Content="Login" Grid.Row="3" Height="50" Width="100" Click="Button_Click" FontFamily="Lucida Calligraphy" Background="Transparent" HorizontalAlignment="Center" BorderBrush="#191919" Foreground="#EC4AF2" FontSize="23"/>
            <Button Content="Sign Up" Grid.Row="4" Height="50" Width="150" Click="Button_Click_1" FontFamily="Lucida Calligraphy" Background="Transparent" HorizontalAlignment="Center" BorderBrush="#191919" VerticalAlignment="Top" Foreground="red" FontSize="23   "/>

        </Grid>
    </Grid>
</Page>
