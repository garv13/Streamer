<Page
    x:Class="Heist.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.Windows.PdfViewer"
    xmlns:lol2="using:Syncfusion.Windows.PdfViewer"
     mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SplitViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Page.Resources>

    <SplitView x:ConnectionId='1' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
               CompactPaneLength="50" OpenPaneLength="150" >
        <SplitView.Pane>
            <StackPanel >
                <Button x:ConnectionId='2' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent"                              />

                <RadioButton x:ConnectionId='3' Tag="" Content="Home"
                 Style="{StaticResource SplitViewNavButtonStyle}"
               IsChecked="True"                           />

                <RadioButton x:ConnectionId='4' x:Name="MenuButton2" Tag="" Style="{StaticResource SplitViewNavButtonStyle}" Content="Downloads"
                                                 />

                <RadioButton x:ConnectionId='5' x:Name="MenuButton3" Tag="" Content="Purchased" Style="{StaticResource SplitViewNavButtonStyle}"
                                                 />

                <RadioButton x:ConnectionId='6' x:Name="MenuButton4" Tag="" Content="Store"
                        Style="{StaticResource SplitViewNavButtonStyle}"                          />

                <RadioButton x:ConnectionId='7' x:Name="MenuButton5" Tag="" Content="About" Style="{StaticResource SplitViewNavButtonStyle}"
                                                  />

            </StackPanel>
        </SplitView.Pane>

        <SplitView.Content>

            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.06*"/>
                    <RowDefinition Height="0.94*"/>
                </Grid.RowDefinitions>
                <ProgressBar x:ConnectionId='8' x:Name="Loading" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed"/>
                <Border Background="Black" Grid.Row="0">
                    <TextBlock FontSize="36" Foreground="White"  Text="   Wallet"  />
                </Border>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="0.4*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" Text="Your Current balance is: " FontSize="40"/>
                    <TextBlock x:ConnectionId='9' Grid.Row="2" x:Name="balance" Text="" FontSize="40"/>
                    <TextBlock Grid.Row="3" Text="Add Money: " FontSize="38"/>
                    <TextBox x:ConnectionId='10' PlaceholderText="Enter amount" Grid.Row="4" x:Name="Funds" Text="" FontSize="40"/>
                    <Button x:ConnectionId='11' Grid.Row="5" Content="Add"                       HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" FontSize="40"/>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

